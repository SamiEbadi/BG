<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/station_root"
    android:layout_width="match_parent" android:layout_height="match_parent"
    tools:context="com.cartrack.android.bartshouldirun.StationActivity"
    android:background="@drawable/dark_background" >

    <LinearLayout android:id="@+id/station_header_shadow"
        android:layout_width="match_parent" android:layout_height="5dp"
        android:alpha="0" android:background="@drawable/shadow"
        android:orientation="horizontal" android:layout_marginTop="70dp"/>

    <HorizontalScrollView
        android:layout_width="match_parent" android:layout_height="match_parent"
        android:layout_marginTop="@dimen/platform_top_margin" >

        <LinearLayout android:id="@+id/all_platforms_layout"
            android:layout_width="wrap_content" android:layout_height="match_parent"
            android:orientation="horizontal" >

        </LinearLayout>

    </HorizontalScrollView>

</RelativeLayout>
