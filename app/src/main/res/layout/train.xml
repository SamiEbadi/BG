<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/background_layout"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="50dp" android:background="@drawable/train_rect"
    android:paddingStart="@dimen/train_in_margin" android:paddingEnd="@dimen/train_in_margin"
    android:paddingBottom="@dimen/train_in_margin" >

    <TableLayout android:id="@+id/train_top"
        android:layout_width="match_parent" android:layout_height="0dp"
        android:layout_weight="10"
        android:shrinkColumns="0" android:stretchColumns="1">
        <TableRow>

        <TextView android:id="@+id/destination"
             android:fontFamily="sans-serif-light" android:ellipsize="marquee"
            android:textSize="18sp" android:gravity="top"
            android:singleLine="true"/>

        <TextView android:id="@+id/time_left"
             android:textSize="20sp" android:gravity="end|center_vertical"
            android:singleLine="true" android:layout_marginStart="5dp"
            android:textStyle="bold"/>

            <TextView android:id="@+id/min_text"
                android:textSize="10sp" android:gravity="end|center_vertical"
                android:singleLine="true" android:text="@string/min"
                android:layout_marginStart="2dp" android:alpha="0.5"/>

        </TableRow>
    </TableLayout>


    <LinearLayout android:id="@+id/cars_layout"
        android:layout_width="match_parent" android:layout_height="0dp"
        android:layout_weight="6" android:orientation="horizontal"
        android:layout_marginTop="1dp">

        <LinearLayout android:id="@+id/car_1"
            android:layout_height="match_parent" android:layout_width="0dp"
            android:background="@drawable/car" android:layout_weight="1"
            android:orientation="horizontal"/>

        <LinearLayout android:layout_height="match_parent" android:layout_width="0dp"
            android:background="@drawable/car" android:layout_weight="1"
            android:layout_marginLeft="@dimen/train_car_in_margin" />
        <LinearLayout android:layout_height="match_parent" android:layout_width="0dp"
            android:background="@drawable/car" android:layout_weight="1"
            android:layout_marginLeft="@dimen/train_car_in_margin" />
        <LinearLayout android:layout_height="match_parent" android:layout_width="0dp"
            android:background="@drawable/car" android:layout_weight="1"
            android:layout_marginLeft="@dimen/train_car_in_margin"/>
        <LinearLayout android:layout_height="match_parent" android:layout_width="0dp"
            android:background="@drawable/car" android:layout_weight="1"
            android:layout_marginLeft="@dimen/train_car_in_margin"/>
        <LinearLayout android:layout_height="match_parent" android:layout_width="0dp"
            android:background="@drawable/car" android:layout_weight="1"
            android:layout_marginLeft="@dimen/train_car_in_margin"/>
        <LinearLayout android:layout_height="match_parent" android:layout_width="0dp"
            android:background="@drawable/car" android:layout_weight="1"
            android:layout_marginLeft="@dimen/train_car_in_margin"/>
        <LinearLayout android:layout_height="match_parent" android:layout_width="0dp"
            android:background="@drawable/car" android:layout_weight="1"
            android:layout_marginLeft="@dimen/train_car_in_margin"/>
        <LinearLayout android:layout_height="match_parent" android:layout_width="0dp"
            android:background="@drawable/car" android:layout_weight="1"
            android:layout_marginLeft="@dimen/train_car_in_margin"/>
        <LinearLayout android:layout_height="match_parent" android:layout_width="0dp"
            android:background="@drawable/car" android:layout_weight="1"
            android:layout_marginLeft="@dimen/train_car_in_margin" />

    </LinearLayout>
</LinearLayout>
