<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="horizontal" >
    <LinearLayout
        android:id="@+id/train1_layout"
        android:orientation="vertical" android:layout_width="200dp"
        android:layout_height="50dp" >
        <LinearLayout
            android:layout_width="wrap_content" android:layout_height="50dp"
            android:orientation="horizontal" >
            <TextView android:id="@+id/train1_name"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:textColor="#FFFFFF" android:textSize="20sp"/>
            <TextView android:id="@+id/train1_minute"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:textColor="#FFFFFF" android:layout_marginLeft="20dp"
                android:textSize="20sp"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>